<script>
function addNewGoods(){
  goodsForm.reset();
  UE.getEditor('editor').setContent('');
  goodsForm.action='./pubgoods';
  $('#goodsForm').show();
}
function hideGoodsForm(){
  $('#goodsForm').hide();
}
function onSub(){
  // for(var key in $('#editor')){
  //  document.write(key);
  //   document.write('<br/>');
  // }
  //alert($('#editor').context);
  //alert(goodsForm.editorValue.value);
  return true;
}
function lookgoods(){
  $('#goodsForm').show();
}
 
  function upGoods(goodsid){
   $.get('/home/getGoodsInfo?id=' + goodsid,function(reValue){
      if(reValue!=''){
         goodsForm.goodsname.value=reValue.goodsname;
        goodsForm.price.value=reValue.price;
        goodsForm.oldGoodsImg.value=reValue.goodsimg;
        document.getElementById('checkimg').src='..'+reValue.goodsimg;
        $(goodsForm.typeid).val(reValue.typeid);//用jquery的方式从数据库中直接拿出数据
        UE.getEditor('editor').setContent(reValue.goodsintro);
      }else{
        alert('数据库无此记录');
      }
   });
    goodsForm.action='/home/upgoods';
    
    $('#goodsForm').show();
  }
</script>
<form id='goodsForm' name='goodsForm' style='display:none' method="post" action='./pubgoods' onsubmit="return onSub();" enctype="multipart/form-data">
  <table class="table table-bordered">
  <caption>商品信息&nbsp;
  <button type="button" class="btn btn-success" onclick='hideGoodsForm()'>收起</button>
  </caption>
  <tbody>
    <tr>
      <td><input type="text" class="form-control" name="goodsname" id='goodsname' placeholder="请输入商品名称"></td>
    </tr>
    <tr>
      <td>请选择商品图片<input type="file" name="goodsimg" id='goodsimg'>
      <input type='hidden' name='oldGoodsImg' >
      &nbsp;
      <img id='checkimg' name='checkimg' src='' style='float:right'>
      </td>
    </tr>
    <tr>
      <td>
        <select class="form-control" name='typeid' id='typeid'>
        <option value='0'>请选择商品类别</option>
          <option value='1'>重机</option>
          <option value='2'>车辆</option>
          <option value='3'>磨具</option>
        </select>
      </td>
    </tr>
    <tr>
      <td><input type="number" class="form-control" name="price" id='price' placeholder="请输入价格" step='0.01'>
      </td>
    </tr>
    <tr>
      <td>
        商品介绍
      </td>
    </tr>
    <tr>
      <td>
        <% include ueditor %>
      </td>
    </tr>
    <tr>
      <td align='center'>
        <input type='hidden' name='shopid' value='<%-shopRs[0].id%>'/>
        <input type='hidden' name='goodsid' value='<%-rs[0].id%>'/>
        <button type="submit" class="btn btn-success">创建新商品</button>&nbsp;
        <button type="button" class="btn btn-success" onclick='hideGoodsForm()'>收起</button>
      </td>
    </tr>
  </tbody>
</table>
</form>
<table class="table">
    <caption>
    <button type="button" class="btn btn-warning" onclick='addNewGoods()'>添加新商品</button>
    </caption>
    <thead>
      <tr>
        <th>图片</th>
        <th>商品简介</th>
        <th>好评度</th>
        <th>
        操作
        </th>
      </tr>
    </thead>
    <tbody>
    <% rs.forEach(function(row){ %>
      <tr>
        <td><img src='<%-row.goodsimg%>' height='60px' width='60px'></td>
        <td><%-row.goodsname%>&nbsp;
        <a href='#'onclick='lookgoods()'>查看详细</a>
          
        </td>
        <td><%-row.praise%></td>
        <td>
       <a href='#' onclick='upGoods(<%-row.id%>)'>修改</a>
        &nbsp;删除</td>
      </tr>
      <%})%>
        <tr>
            <% page = parseInt(page); %>
            <td colspan='4' align='center'>
              共<%-sizeCount%>条消息&nbsp;
              第<%-page%>/<%-sumPage%>页&nbsp;
              <%if(page>1){%>
              <a href='./shopmanage?page=1'>首页</a>&nbsp;
              <a href='./shopmanage?page=<%-page-1%>'>上一页</a>&nbsp;
              <%}%>
              <%if(page<sumPage){%>
              <a href='./shopmanage?page=<%-page+1%>'>下一页</a>&nbsp;
              <a href='./shopmanage?page=<%-sumPage%>'>尾页</a>&nbsp;
              <%}%>
              <% for(i=1;i<=sumPage;i++){ %>
                <a href='./shopmanage?page=<%-i%>'><%-i%></a>&nbsp;
              <% } %>
            </td>
          </tr>
    </tbody>
  </table>